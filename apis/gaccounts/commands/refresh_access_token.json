{
	 path_template: '/o/oauth2/token',
	 verb: 'POST',
	 ret: 'access_token',
	 form: {
		client_id: '{client_id}',
		client_secret: '{client_secret}',
		grant_type: 'refresh_token',
		refresh_token: '{refresh_token}' 
	 },
	 options: [
	           {
	        	   short: 'i',
	        	   long: 'client_id',
	        	   def: 'client id',
	        	   desc: 'client id',
	           },
	           {
	        	   short: 's',
	        	   long: 'client_secret',
	        	   def: 'client secret',
	        	   desc: 'client secret',
	           },
	           {
	        	   short: 'r',
	        	   long: 'refresh_token',
	        	   def: 'refresh token',
	        	   desc: 'refresh token',
	           },
	           
	 ]
 }
			 